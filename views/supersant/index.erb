<h3>Question <span class="q-no">1</span>.</h3>
<div class="question"></div>
<template class="q-template">
<div class="question">
<h3>{{ question }}</h3>
<% options = [
  "<a href='#' class='btn btn-default btn-lg s-option'>{{ option1 }}</a>",
  "<a href='#' class='btn btn-default btn-lg s-option'>{{ option2 }}</a>",
  "<a href='#' class='btn btn-default btn-lg s-option'>{{ option3 }}</a>",
  "<a href='#' class='btn btn-default btn-lg s-option'>{{ correct }}</a>"
].shuffle %>
<div class="btn-group-vertical"><% options.each do |option| %>
  <%= option %>
<% end %></div>
</div>
</template>